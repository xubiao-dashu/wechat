<view class="page light bg-pink">
	<cu-custom>
		<view slot="content" style="color: orange;">石头治愈屋</view>
	</cu-custom>
	<swiper class="card-swiper {{DotStyle?'square-dot':'round-dot'}}" indicator-dots="true" circular="true" autoplay="true" interval="5000" duration="500" bindchange="cardSwiper" indicator-color="#8799a3" indicator-active-color="#0081ff">
		<swiper-item wx:for="{{swiperList}}" wx:key class="{{cardCur==index?'cur':''}}">
			<view class="swiper-item">
				<image src="{{item.url}}" mode="aspectFill" wx:if="{{item.type=='image'}}"></image>
				<video src="{{item.url}}" autoplay loop muted show-play-btn="{{false}}" controls="{{false}}" objectFit="cover" wx:if="{{item.type=='video'}}"></video>
			</view>
		</swiper-item>
	</swiper>
	<view class="flex">
		<view class="padding-sm flex-sub"  style="width: 40%;">
			<view class="padding radius shadow-blur bg-gradual-pink text-center">
				<navigator class="content" hover-class="none" url="../voice/list" >
					<text class="text-white" style="font-size: 16px">治愈电台</text>
				</navigator>
			</view>
		</view>
		<view class="padding-sm flex-sub"  style="width: 40%;">
			<view class="padding radius shadow-blur bg-gradual-pink text-center">
				<navigator class="content" hover-class="none" url="../voice/list" >
					<text class="text-white" style="font-size: 16px">治愈语录</text>
				</navigator>
			</view>
		</view>
	</view>

	<view class="flex">
		<view class="padding-sm flex-sub" catchtap="play" style="width: 40%;">
			<view class="padding radius shadow-blur bg-gradual-pink text-center">
				<navigator class="content" hover-class="none" url="../voice/list" >
					<text class="text-white" style="font-size: 16px">经典老歌</text>
				</navigator>
			</view>
		</view>
		<view class="padding-sm flex-sub" catchtap="play" style="width: 40%;">
			<view class="padding radius shadow-blur bg-gradual-pink text-center">
				<navigator class="content" hover-class="none" url="../voice/list" >
					<text class="text-white" style="font-size: 16px">每日一签</text>
				</navigator>
			</view>
		</view>
	</view>
	<view class="cu-card case">
		<view class="cu-item shadow">
			<view class="image">
				<image src="https://www.daxuzhan.top/static/07.jpg" mode="widthFix"></image>
				<view class="cu-tag bg-pink">生活服务</view>
				<view class="cu-bar bg-shadeBottom"> <text class="text-cut" style="font-size: 16px;">立即进入></text></view>
			</view>
		</view>
	</view>
</view>